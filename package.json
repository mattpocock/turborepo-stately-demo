{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "manypkg check && yarn p prisma:generate",
    "release": "node ./scripts/release.js",
    "p": "yarn workspace @stately/prisma",
    "wc": "yarn workspace @stately/web-cypress",
    "web": "yarn workspace @stately/web",
    "docs": "yarn workspace @stately/docs",
    "lint": "yarn workspaces run lint",
    "test": "CI=true yarn workspaces run test && yarn wc run test:cypress"
  },
  "dependencies": {
    "@manypkg/cli": "^0.18.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": "prettier --write"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.17"
}
